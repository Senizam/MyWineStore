@model MyWineStore.Models.RegistrationModel

@{
    ViewBag.Title = "Index";
    //Layout = "~/Views/Shared/_Layout.csml";
}


<h2>Register</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary()

    <div class="form-group">
        @Html.LabelFor(x => x.EmailAddress)
        @Html.TextBoxFor(x => x.EmailAddress)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Password)
        @Html.PasswordFor(x => x.Password)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.FirstName)
        @Html.TextBoxFor(x => x.FirstName)
    </div><div class="form-group">
        @Html.LabelFor(x => x.LastName)
        @Html.TextBoxFor(x => x.LastName)
    </div><div class="form-group">
        @Html.LabelFor(x => x.DateOfBirth)
        <input type="date" name="DateOfBirth" value="@Model.DateOfBirth" />
    </div>
    <input type="submit" value="Register" class="btn btn-primary" />
    @Html.ActionLink("Login with an existing account", "Index", "Login", null, new { @class = "btn" })

}
